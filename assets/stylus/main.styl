/* Custom Stylesheet */


@import "material.min.css"
@import "font-awesome.min.css"
@import "animate.min.css"
@import "responsive.css"

$red = #ff3333
$base1 = #333333

html, body
    font-family 'Roboto', 'Helvetica', sans-serif
    margin 0
    padding 0

.mdl-theme
    .mdl-layout__header-row
        padding-left 40px
    .mdl-layout
        &.is-small-screen
            .mdl-layout__header-row
                h3
                    font-size inherit
            .mdl-layout__tab-bar
                .mdl-button
                    display none
    .mdl-layout__tab-bar-button
        display none
    .mdl-layout__tab-bar-container
        height 64px
    .mdl-layout__tab-bar
        padding 0
        padding-left 16px
        box-sizing border-box
        height 100%
        width 100%
        .mdl-layout__tab
            height 64px
            line-height 64px
            &.is-active
                &::after
                    background-color white
                    height 4px
    main
        & > #post-loop
            padding 8px
            padding-top 48px
    .mdl-card
        height auto
        display -webkit-box
        display -webkit-flex
        display -ms-flexbox
        display flex
        -webkit-box-orient vertical
        -webkit-box-direction normal
        -webkit-flex-direction column
        -ms-flex-direction column
        flex-direction column
        & > *
            height auto
        .mdl-card__supporting-text
            margin 40px
            -webkit-box-flex 1
            -webkit-flex-grow 1
            -ms-flex-positive 1
            flex-grow 1
            padding 0
            color inherit
            width calc(100% - 80px)
            & > h3
                &:first-child
                    margin-bottom 24px
    &.mdl-theme
        .mdl-card__supporting-text
            h4
                margin-top 0
                margin-bottom 20px
                span
                    font-size 10px
                    color #333
                    margin-left 15px
    .mdl-card__actions
        margin 0
        padding 4px 40px
        color inherit
        a
            color #00BCD4
            margin 0
        button
            float right
    .mdl-card__supporting-text
        & + .mdl-card__actions
            border-top 1px solid rgba(0, 0, 0, 0.12)
    #add
        position absolute
        right 40px
        top 36px
        z-index 999
    .mdl-layout__content
        section
            &:not(:last-of-type)
                position relative
                margin-bottom 48px
    section
        &.section--post
            max-width 860px
            .section__text
                &:not(:last-child)
                    border-bottom 1px solid rgba(0,0,0,.13)
        & > header
            display -webkit-box
            display -webkit-flex
            display -ms-flexbox
            display flex
            -webkit-box-align center
            -webkit-align-items center
            -ms-flex-align center
            align-items center
            -webkit-box-pack center
            -webkit-justify-content center
            -ms-flex-pack center
            justify-content center
            & > .material-icons
                font-size 3rem
        & > .section__play-btn
            min-height 200px
        & > button
            position absolute
            z-index 99
            top 8px
            right 8px
        .section__circle
            display -webkit-box
            display -webkit-flex
            display -ms-flexbox
            display flex
            -webkit-box-align center
            -webkit-align-items center
            -ms-flex-align center
            align-items center
            -webkit-box-pack start
            -webkit-justify-content flex-start
            -ms-flex-pack start
            justify-content flex-start
            -webkit-box-flex 0
            -webkit-flex-grow 0
            -ms-flex-positive 0
            flex-grow 0
            -webkit-flex-shrink 1
            -ms-flex-negative 1
            flex-shrink 1
        .section__text
            -webkit-box-flex 1
            -webkit-flex-grow 1
            -ms-flex-positive 1
            flex-grow 1
            -webkit-flex-shrink 0
            -ms-flex-negative 0
            flex-shrink 0
            padding-top 8px
            h5
                font-size inherit
                margin 0
                margin-bottom 0.5em
            a
                text-decoration none
        .section__circle-container
            & > .section__circle-container__circle
                width 64px
                height 64px
                border-radius 32px
                margin 8px 0
        &.section--footer
            padding 64px 0
            margin 0 -8px -8px -8px
            .section__circle--big
                width 100px
                height 100px
                border-radius 50px
                margin 8px 32px
    #post-loop
        &:not(#overview)
            background-color white
    .toc
        border-left 4px solid #C1EEF4
        margin 24px
        padding 0
        padding-left 8px
        display -webkit-box
        display -webkit-flex
        display -ms-flexbox
        display flex
        -webkit-box-orient vertical
        -webkit-box-direction normal
        -webkit-flex-direction column
        -ms-flex-direction column
        flex-direction column
        h4
            font-size 0.9rem
            margin-top 0
        a
            color #4DD0E1
            text-decoration none
            font-size 16px
            line-height 28px
            display block
    .mdl-menu__container
        z-index 99

.mdl-theme .mdl-layout:not(.is-small-screen) .mdl-layout__tab-bar,
.mdl-theme .mdl-layout:not(.is-small-screen) .mdl-layout__tab-bar-container
    overflow visible

.mdl-theme .mdl-card__actions a:hover,
.mdl-theme .mdl-card__actions a:active
    color inherit
    background-color transparent

.mdl-theme #features h4, #features h5
    margin-bottom 16px

    

        
